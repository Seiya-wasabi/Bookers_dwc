<body>
  <div class ="header">
    <h1>Books</h1>
  </div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>
  
  <div class ="new">
    <h1 class ="new_book">New book</h1>
    <%= form_with model:@book, url:"/homes", local:true do|f|%>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
  </div>
</body>