<body>
  <div class ="header">
    <h1 class="index-title">Books</h1>
  </div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do|b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= link_to "Show", home_path(b.id) %></td>
        <td><%= link_to "Edit", edit_home_path(b.id) %></td>
        <td><%= link_to "Destroy", destroy_book_path(b.id), method: :delete, "data-confirm" =>"Are You Sure？" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class ="new">
    <h1 class ="new_book">New book</h1>
      <%# ここからエラーメッセージ %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%# ここまでエラーメッセージ %>
    <%= form_with model:@book, url:"homes/#{@book.id}", local:true do|f|%>
    <div class ="field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class ="field">
    <h4>Body</h4>
    <%= f.text_area :body %>
    </div>
    <div class ="action">
      <%= f.submit 'Create Book' %>
    </div>
    <% end %>
  </div>
</body>