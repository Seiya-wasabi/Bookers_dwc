<h1 class ="edit-title">Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <div class ="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class ="field">
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div class ="action">
      <%= f.submit 'Update Book' %>
    </div>
    <% end %>

  <div class ="link">
    <p><%= link_to "Show", home_path(@book.id) %> | <%= link_to "Back", "/books" %></p>
  </div>