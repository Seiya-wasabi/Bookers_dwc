<h1 class ="edit-title">Editing Book</h1>

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
    <div class ="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
    </div>
    <div class ="field">
        <h4>Body</h4>
        <%= f.text_area :body %>
    </div>
    <div class ="action">
      <%= f.submit 'Update Book' %>
    </div>
    <% end %>

  <div class ="link">
    <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", "/books" %></p>
  </div>